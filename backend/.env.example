# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/check_review

# Security
SECRET_KEY=change-this-to-a-secure-random-string

# Redis (optional - leave empty or omit to disable)
# REDIS_URL=redis://localhost:6379/0

# Application
DEBUG=true
ENVIRONMENT=development
APP_NAME="Check Review Console"

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Session
SESSION_TIMEOUT_MINUTES=30
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Business Rules
DUAL_CONTROL_THRESHOLD=5000.0
HIGH_PRIORITY_THRESHOLD=10000.0
DEFAULT_SLA_HOURS=4

# AI Settings
AI_ENABLED=false
AI_CONFIDENCE_THRESHOLD=0.7

# Integration
INTEGRATION_ADAPTER=mock
INTEGRATION_TIMEOUT_SECONDS=30
INTEGRATION_RETRY_ATTEMPTS=3

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
