# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_this_password
POSTGRES_DB=check_review

# Application Configuration
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=false

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# API Configuration
API_V1_PREFIX=/api/v1

# Security
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Cookie Security (for httpOnly refresh tokens)
# Set COOKIE_SECURE=false for local dev without HTTPS, true for production
COOKIE_SECURE=false
COOKIE_SAMESITE=lax
CSRF_SECRET_KEY=change-this-csrf-secret-in-production

# Integration
INTEGRATION_ADAPTER=mock

# AI Settings
AI_ENABLED=false
AI_CONFIDENCE_THRESHOLD=0.7
